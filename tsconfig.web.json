{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*",
    "src/renderer/src/**/*",
    "src/renderer/src/*",
    "src/locales/**/*.json",
  ],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  }
}
